set(CMAKE_SYSTEM_NAME AVR)
set(CMAKE_SYSTEM_PROCESSOR avr)
set(CMAKE_SYSTEM_VERSION 1)

set(CMAKE_C_COMPILER @AVRGCC_EXECUTABLE@)
#set(CMAKE_CXX_COMPILER @AVRGCC_EXECUTABLE@)
set(CMAKE_OBJCOPY @AVROBJCOPY_EXECUTABLE@)
set(AVRDUDE_EXECUTABLE @AVRDUDE_EXECUTABLE@)

set(AVR_BSP "arduino_uno")
set(AVR_MCU "atmega328p")
set(AVR_FREQ "16000000")
set(AVRDUDE_MCU "m328p")
set(AVRDUDE_PROG "arduino")
set(AVRDUDE_PORT "/dev/ttyACM0")
set(AVRDUDE_BAUD "115200")

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
